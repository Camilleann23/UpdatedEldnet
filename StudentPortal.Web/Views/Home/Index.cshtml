@{
    ViewData["Title"] = "Creighton University";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Creighton University</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <style>
        body {
            background-image: url('https://thumbs.dreamstime.com/b/omaha-nebraska-us-entrance-to-campus-creighton-university-omaha-nebraska-us-entrance-to-campus-creighton-university-high-250483181.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            color: white;
        }

        .navbar {
            background-color: rgba(0, 0, 0, 0.8);
        }

        .navbar-brand {
            font-family: 'Cinzel', serif;
            font-size: 2rem;
            letter-spacing: 2px;
        }

        .hero-section {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            background-color: rgba(0, 0, 0, 0.5);
            padding: 50px;
            border-radius: 15px;
        }

        .hero-title {
            font-size: 4rem;
            font-family: 'Cinzel', serif;
            letter-spacing: 3px;
            text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.7);
        }

        .hero-text {
            font-size: 1.5rem;
            font-family: 'Lora', serif;
            margin-bottom: 30px;
        }

        .btn-hogwarts {
            background-color: #6b4226;
            border-color: #6b4226;
            font-size: 1.2rem;
            letter-spacing: 1px;
        }

            .btn-hogwarts:hover {
                background-color: #4a2e1a;
                border-color: #4a2e1a;
            }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand">Creighton University</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

        </div>
    </nav>

    <!-- Hero Section -->
    <div class="container">
        <div class="hero-section">
            <div>
                <h1 class="hero-title">Welcome to Creighton University</h1>
                <a href="#" class="btn btn-hogwarts btn-lg">Enroll Now</a>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
   
</body>
</html>
