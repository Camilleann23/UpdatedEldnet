@model StudentPortal.Web.Models.Entities.Student

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Student</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f6f8;
            color: #002d72;
        }

        .card-header {
            background-color: #003366;
            color: #ffffff;
        }

        .btn-primary {
            background-color: #003366;
            border-color: #003366;
        }

            .btn-primary:hover {
                background-color: #002d72;
                border-color: #002d72;
            }

        .btn-danger {
            background-color: #c8102e;
            border-color: #c8102e;
        }

            .btn-danger:hover {
                background-color: #a01c29;
                border-color: #a01c29;
            }

        footer {
            background-color: #003366;
            color: #f0f4f8;
            text-align: center;
            padding: 10px 0;
            position: relative;
            width: 100%;
        }

            footer a {
                color: #ccd9ff;
                text-decoration: none;
            }

                footer a:hover {
                    color: #e0f0f7;
                }
    </style>
</head>
<body>

    <form method="get">
        <div class="input-group mb-3">
            <div class="form-outline" data-mdb-input-init>
                <label class="form-label" asp-for="ID">Search</label>
                <input type="search" asp-for="ID" class="form-control" />
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> SEARCH
                </button>
            </div>
        </div>
    </form>

    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header">
                <h1 class="text-center">Edit Student</h1>
            </div>

            <div class="card-body">
                @if (Model == null)

                {
                    <p class="text-danger">No student was found with this ID</p>
                }

                else

                {
                    <form method="post" action="@Url.Action("Edit", "Students")">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ID" />

                        <div class="mb-3">
                            <label for="studentId" class="form-label">ID</label>
                            <input type="text" class="form-control" id="studentId" value="@Model.ID" readonly>
                        </div>

                        <div class="mb-3">
                            <label for="studentFName" class="form-label">First Name</label>
                            <input type="text" class="form-control" id="studentFName" placeholder="Enter First Name" asp-for="FName" required>
                            <span asp-validation-for="FName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="studentLName" class="form-label">Last Name</label>
                            <input type="text" class="form-control" id="studentLName" placeholder="Enter Last Name" asp-for="LName" required>
                            <span asp-validation-for="LName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="studentCourse" class="form-label">Course</label>
                            <input type="text" class="form-control" id="studentCourse" placeholder="Enter Course" asp-for="Course" required>
                            <span asp-validation-for="Course" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="studentYear" class="form-label">Year</label>
                            <input type="number" class="form-control" id="studentYear" placeholder="Enter Year Level" asp-for="Year" required>
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="studentStatus" class="form-label">Status</label>
                            <input type="text" class="form-control" id="studentStatus" placeholder="Enter Status" asp-for="Status" required>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>

                    <form method="post" asp-action="Delete" asp-controller="Students">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ID" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this student?');">Delete</button>
                    </form>
                }
            </div>
        </div>
    </div>


    <!-- Scripts for validation -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
