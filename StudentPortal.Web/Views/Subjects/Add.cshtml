@model StudentPortal.Web.Models.AddSubjectViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Add Subjects</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h1 class="text-center mb-0">Add Subject</h1>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Add">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label for="SubjectCode" class="form-label">Subject Code</label>
                        <input type="number" class="form-control" id="SubjectCode" placeholder="Enter Subject Code" asp-for="SubjectCode" required>
                        <span asp-validation-for="SubjectCode" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="SubjectName" class="form-label">Subject Name</label>
                        <input type="text" class="form-control" id="SubjectName" placeholder="Enter Subject Name" asp-for="SubjectName" required>
                        <span asp-validation-for="SubjectName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Description" class="form-label">Description</label>
                        <input type="text" class="form-control" id="Description" placeholder="Enter Description" asp-for="Description" required>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Units" class="form-label">Units</label>
                        <input type="number" class="form-control" id="Units" placeholder="Enter number of Units" asp-for="Units" required>
                        <span asp-validation-for="Units" class="text-danger"></span>
                    </div>

                    <!-- Dropdown for Offering -->
                    <div class="mb-3">
                        <label for="Offering" class="form-label">Offering</label>
                        <select class="form-select" id="Offering" asp-for="Offering">
                            <option value="">-- Select Offering --</option>
                            <option value="1st Sem">1st Sem</option>
                            <option value="2nd Sem">2nd Sem</option>
                            <option value="off-Sem">off- Sem</option>    
                        </select>
                        <span asp-validation-for="Offering" class="text-danger"></span>
                    </div>

                    <!-- Dropdown for Category -->
                    <div class="mb-3">
                        <label for="Category" class="form-label">Category</label>
                        <select class="form-select" id="Category" asp-for="Category">
                            <option value="">-- Select Category --</option>
                            <option value="Lec">Lec</option>
                            <option value="Lab">Lab</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>

                    <!-- Dropdown for Course Code -->
                    <div class="mb-3">
                        <label for="CourseCode" class="form-label">Course Code</label>
                        <select class="form-select" id="CourseCode" asp-for="CourseCode">
                            <option value="">-- Select Course Code --</option>
                            <option value="BSIT">BSIT</option>
                            <option value="BSIS">BSIS</option>
                            <option value="BSACT">BSACT</option>
                            <option value="BSCS">BSCS</option>
                            <option value="BSA">BSA</option>
                            <option value="BSN">BSN</option>
                        </select>
                        <span asp-validation-for="CourseCode" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="CurriculumYear" class="form-label">Curriculum Year</label>
                        <input type="text" class="form-control" id="CurriculumYear" placeholder="YYYY-YYYY" asp-for="CurriculumYear" required>
                        <span asp-validation-for="CurriculumYear" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Requisite" class="form-label">Requisite</label>
                        <input type="text" class="form-control" id="Requisite" placeholder="Enter Requisite" asp-for="Requisite">
                        <span asp-validation-for="Requisite" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="reset" class="btn btn-danger">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Scripts for validation -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
