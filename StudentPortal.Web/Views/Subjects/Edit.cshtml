@model StudentPortal.Web.Models.Entities.Subject

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Subject</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f4f6f8;
            color: #002d72;
        }

        .card-header {
            background-color: #003366;
            color: #ffffff;
        }

        .btn-primary {
            background-color: #003366;
            border-color: #003366;
        }

            .btn-primary:hover {
                background-color: #002d72;
                border-color: #002d72;
            }

        .btn-danger {
            background-color: #c8102e;
            border-color: #c8102e;
        }

            .btn-danger:hover {
                background-color: #a01c29;
                border-color: #a01c29;
            }

        footer {
            background-color: #003366;
            color: #f0f4f8;
            text-align: center;
            padding: 10px 0;
            position: relative;
            width: 100%;
        }

            footer a {
                color: #ccd9ff;
                text-decoration: none;
            }

                footer a:hover {
                    color: #e0f0f7;
                }
    </style>
</head>
<body>

    <form method="get">
        <div class="input-group">
            <div class="form-outline" data-mdb-input-init>
                <label class="form-label" asp-for="SubjectCode">Search</label>
                <input type="search" asp-for="SubjectCode" class="form-control" />
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i>SEARCH
                </button>
            </div>

        </div>
    </form>

    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header">
                <h1 class="text-center">Edit Subject</h1>
            </div>

            <div class="card-body">
                @if (Model == null)
                {
                    <p class="text-danger">No student was found with this SubjectCode</p>
                }
                else
                {
                    <form method="post" action="@Url.Action("Edit", "Subjects")">
                        <input type="hidden" asp-for="SubjectCode" />

                        <div class="mb-3">
                            <label for="SubjectCode" class="form-label">SubjectCode</label>
                            <input type="text" class="form-control" id="SubjectCode" value="@Model.SubjectCode" readonly>
                        </div>

                        
                        <div class="mb-3">
                            <label for="Description" class="form-label">Description</label>
                            <input type="text" class="form-control" id="Description" placeholder="Enter Description" asp-for="Description" required>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Units" class="form-label">Units</label>
                            <input type="text" class="form-control" id="Units" placeholder="Enter Number of Units" asp-for="Units" required>
                            <span asp-validation-for="Units" class="text-danger"></span>
                        </div>
                        <!-- Dropdown for Offering -->
                        <div class="mb-3">
                            <label for="Offering" class="form-label">Offering</label>
                            <select class="form-select" id="Offering" asp-for="Offering">
                                <option value="">-- Select Offering --</option>
                                <option value="1st Sem">1st Sem</option>
                                <option value="2nd Sem">2nd Sem</option>
                                <option value="off-Sem">off- Sem</option>
                            </select>
                            <span asp-validation-for="Offering" class="text-danger"></span>
                        </div>

                        <!-- Dropdown for Category -->
                        <div class="mb-3">
                            <label for="Category" class="form-label">Category</label>
                            <select class="form-select" id="Category" asp-for="Category">
                                <option value="">-- Select Category --</option>
                                <option value="Lec">Lec</option>
                                <option value="Lab">Lab</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <!-- Dropdown for Course Code -->
                        <div class="mb-3">
                            <label for="CourseCode" class="form-label">Course Code</label>
                            <select class="form-select" id="CourseCode" asp-for="CourseCode">
                                <option value="">-- Select Course Code --</option>
                                <option value="BSIT">BSIT</option>
                                <option value="BSIS">BSIS</option>
                                <option value="BSACT">BSACT</option>
                                <option value="BSCS">BSCS</option>
                                <option value="BSA">BSA</option>
                                <option value="BSN">BSN</option>
                            </select>
                            <span asp-validation-for="CourseCode" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="CurriculumYear" class="form-label">CurriculumYear</label>
                            <input type="text" class="form-control" id="CurriculumYear" placeholder="YYYY-YYYY" asp-for="CurriculumYear" required>
                            <span asp-validation-for="CurriculumYear" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="Requisite" class="form-label">Requisite</label>
                            <input type="text" class="form-control" id="Requisite" placeholder="Enter Requisite" asp-for="Requisite" required>
                            <span asp-validation-for="Requisite" class="text-danger"></span>
                        </div>


                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>

                    <form method="post" asp-action="Delete" asp-controller="Subjects">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="SubjectCode" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this subject?');">Delete</button>
                    </form>
                }
            </div>
        </div>
    </div>
    <script>
        import { Input, initMDB } from "mdb-ui-kit";

        initMDB({ Input });

        const searchButton = document.getElementById('search-button');
        const searchInput = document.getElementById('search-input');
        searchButton.addEventListener('click', () => {
            const inputValue = searchInput.value;
            alert(inputValue);
        });

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Scripts for validation -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
