@model StudentPortal.Web.Models.AddScheduleViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Add Schedule </title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h1 class="text-center mb-0">Add Schedule</h1>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Add">
                    @Html.AntiForgeryToken()

                    <!-- Subject Code -->
                    <div class="mb-3">
                        <label for="SubjectCode" class="form-label">Subject Code</label>
                        <input type="number" class="form-control" id="SubjectCode" placeholder="Enter Subject Code" asp-for="SubjectCode" required>
                        <span asp-validation-for="SubjectCode" class="text-danger"></span>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label for="Description" class="form-label">Description</label>
                        <input type="text" class="form-control" id="Description" placeholder="Enter Description" asp-for="Description" required>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Section -->
                    <div class="mb-3">
                        <label for="Section" class="form-label">Section</label>
                        <input type="text" class="form-control" id="Section" placeholder="Enter Section" asp-for="Section" required>
                        <span asp-validation-for="Section" class="text-danger"></span>
                    </div>

                    <!-- Start Time -->
                    <div class="mb-3">
                        <label for="StartTime" class="form-label">Start Time</label>
                        <input type="time" class="form-control" id="StartTime" asp-for="StartTime" required>
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>

                    <!-- End Time -->
                    <div class="mb-3">
                        <label for="EndTime" class="form-label">End Time</label>
                        <input type="time" class="form-control" id="EndTime" asp-for="EndTime" required>
                        <span asp-validation-for="EndTime" class="text-danger"></span>
                    </div>

                    <!-- Days -->
                    <div class="mb-3">
                        <label for="Days" class="form-label">Days</label>
                        <input type="text" class="form-control" id="Days" placeholder="Enter Days (e.g., MWF)" asp-for="Days" required>
                        <span asp-validation-for="Days" class="text-danger"></span>
                    </div>

                    <!-- AM/PM Dropdown -->
                    <div class="mb-3">
                        <label for="AMPM" class="form-label">AM/PM</label>
                        <select class="form-select" id="AMPM" asp-for="AMPM">
                            <option value="">-- Select Time Period --</option>
                            <option value="AM">AM</option>
                            <option value="PM">PM</option>
                        </select>
                        <span asp-validation-for="AMPM" class="text-danger"></span>
                    </div>

                    <!-- Room -->
                    <div class="mb-3">
                        <label for="Room" class="form-label">Room</label>
                        <input type="number" class="form-control" id="Room" placeholder="Enter Room Number" asp-for="Room" required>
                        <span asp-validation-for="Room" class="text-danger"></span>
                    </div>

                    <!-- Curriculum Year -->
                    <div class="mb-3">
                        <label for="CurriculumYear" class="form-label">Curriculum Year</label>
                        <input type="text" class="form-control" id="CurriculumYear" placeholder="YYYY-YYYY" asp-for="CurriculumYear" required>
                        <span asp-validation-for="CurriculumYear" class="text-danger"></span>
                    </div>

                    <!-- Buttons -->
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="reset" class="btn btn-danger">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Scripts for validation -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
