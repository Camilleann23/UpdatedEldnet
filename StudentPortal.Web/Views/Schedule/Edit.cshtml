@model StudentPortal.Web.Models.Entities.Schedule

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Schedule</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f4f6f8;
            color: #002d72;
        }

        .card-header {
            background-color: #003366;
            color: #ffffff;
        }

        .btn-primary {
            background-color: #003366;
            border-color: #003366;
        }

            .btn-primary:hover {
                background-color: #002d72;
                border-color: #002d72;
            }

        .btn-danger {
            background-color: #c8102e;
            border-color: #c8102e;
        }

            .btn-danger:hover {
                background-color: #a01c29;
                border-color: #a01c29;
            }

        footer {
            background-color: #003366;
            color: #f0f4f8;
            text-align: center;
            padding: 10px 0;
            position: relative;
            width: 100%;
        }

            footer a {
                color: #ccd9ff;
                text-decoration: none;
            }

                footer a:hover {
                    color: #e0f0f7;
                }
    </style>
</head>
<body>

    <form method="get">
        <div class="input-group">
            <div class="form-outline" data-mdb-input-init>
                <label class="form-label" asp-for="SubjectCode">Search</label>
                <input type="search" asp-for="SubjectCode" class="form-control" />
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i>SEARCH
                </button>
            </div>

        </div>
    </form>

    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header">
                <h1 class="text-center">Edit Schedule</h1>
            </div>

            <div class="card-body">
                @if (Model == null)
                {
                    <p class="text-danger">No student was found with this SubjectCode</p>
                }
                else
                {
                    <form method="post" action="@Url.Action("Edit", "Schedule")">
                        <input type="hidden" asp-for="SubjectCode" />


                        <!-- Subject Code -->
                        <div class="mb-3">
                            <label for="SubjectCode" class="form-label">Subject Code</label>
                            <input type="number" class="form-control" id="SubjectCode" placeholder="Enter Subject Code" asp-for="SubjectCode" required>
                            <span asp-validation-for="SubjectCode" class="text-danger"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label for="Description" class="form-label">Description</label>
                            <input type="text" class="form-control" id="Description" placeholder="Enter Description" asp-for="Description" required>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Section -->
                        <div class="mb-3">
                            <label for="Section" class="form-label">Section</label>
                            <input type="text" class="form-control" id="Section" placeholder="Enter Section" asp-for="Section" required>
                            <span asp-validation-for="Section" class="text-danger"></span>
                        </div>

                        <!-- Start Time -->
                        <div class="mb-3">
                            <label for="StartTime" class="form-label">Start Time</label>
                            <input type="time" class="form-control" id="StartTime" asp-for="StartTime" required>
                            <span asp-validation-for="StartTime" class="text-danger"></span>
                        </div>

                        <!-- End Time -->
                        <div class="mb-3">
                            <label for="EndTime" class="form-label">End Time</label>
                            <input type="time" class="form-control" id="EndTime" asp-for="EndTime" required>
                            <span asp-validation-for="EndTime" class="text-danger"></span>
                        </div>

                        <!-- Days -->
                        <div class="mb-3">
                            <label for="Days" class="form-label">Days</label>
                            <input type="text" class="form-control" id="Days" placeholder="Enter Days (e.g., MWF)" asp-for="Days" required>
                            <span asp-validation-for="Days" class="text-danger"></span>
                        </div>

                        <!-- AM/PM Dropdown -->
                        <div class="mb-3">
                            <label for="AMPM" class="form-label">AM/PM</label>
                            <select class="form-select" id="AMPM" asp-for="AMPM">
                                <option value="">-- Select Time Period --</option>
                                <option value="AM">AM</option>
                                <option value="PM">PM</option>
                            </select>
                            <span asp-validation-for="AMPM" class="text-danger"></span>
                        </div>

                        <!-- Room -->
                        <div class="mb-3">
                            <label for="Room" class="form-label">Room</label>
                            <input type="number" class="form-control" id="Room" placeholder="Enter Room Number" asp-for="Room" required>
                            <span asp-validation-for="Room" class="text-danger"></span>
                        </div>

                        <!-- Curriculum Year -->
                        <div class="mb-3">
                            <label for="CurriculumYear" class="form-label">Curriculum Year</label>
                            <input type="text" class="form-control" id="CurriculumYear" placeholder="YYYY-YYYY" asp-for="CurriculumYear" required>
                            <span asp-validation-for="CurriculumYear" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>

                    <form method="post" asp-action="Delete" asp-controller="Schedule">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="SubjectCode" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this schedule?');">Delete</button>
                    </form>
                }
            </div>
        </div>
    </div>
    <script>
        import { Input, initMDB } from "mdb-ui-kit";

        initMDB({ Input });

        const searchButton = document.getElementById('search-button');
        const searchInput = document.getElementById('search-input');
        searchButton.addEventListener('click', () => {
            const inputValue = searchInput.value;
            alert(inputValue);
        });

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Scripts for validation -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
